{
  "name": "nodejs-server",
  "version": "1.0.0",
  "description": "Node.js Express Server",
  "main": "dist/app.js",
  "scripts": {
    "assets:dist": "sh scripts/copy_assets_views_prod.sh",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "coverage": "nyc npm test && nyc report --reporter=html",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "jscpd": "jscpd . --ignore \"package.json,tsconfig.json,dist,src/views,**/node_modules,**/coverage\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint:fix": "npm run tslint -- --fix",
    "clean": "rm -Rf .nyc_output && rm -Rf coverage && rm -Rf dist && rm -Rf node_modules",
    "install:dev": "npm i",
    "build:dev": "npm run assets:dist && tsc --watch --preserveWatchOutput",
    "start:dev": "nodemon dist/app.js --node-env development",
    "install:prod": "npm i --production",
    "build:prod": "tsc --build tsconfig.prod.json && npm run assets:dist",
    "start:prod": "node dist/app.js --node-env production",
    "dev": "concurrently -k -n \"Build,Start\" -p \"[{name}]\" -c \"blue,green\" \"npm:build:dev\" \"npm:start:dev\"",
    "start": "npm run build:prod && npm run start:prod --"
  },
  "keywords": [
    "Node.js",
    "Express",
    "Server",
    "Node",
    "Clean-code",
    "Craftsmanship",
    "TDD",
    "test",
    "convict",
    "mocha"
  ],
  "author": "Stayfi B.",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.7",
    "@types/dotenv": "^8.2.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.18",
    "@types/nunjucks": "^3.1.3",
    "@types/sinon": "^7.5.1",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "concurrently": "^5.0.1",
    "coveralls": "^3.0.9",
    "jscpd": "^2.0.16",
    "mocha": "^6.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0-beta.3",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2",
    "tree-kill": "^1.2.2",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-security": "^1.16.0",
    "tslint-mocha": "^1.0.2",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "@types/convict": "^4.2.1",
    "@types/express": "^4.17.2",
    "@types/morgan": "^1.7.37",
    "convict": "^6.2.2",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "nunjucks": "^3.2.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "include": [
      "src/**/*.ts",
      "src/**/*.js"
    ],
    "exclude": [
      "dist",
      "coverage",
      "**/*.spec.ts"
    ]
  }
}